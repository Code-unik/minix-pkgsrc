#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.1 2002/05/25 12:25:50 markd Exp $

PKGNAME=$1
STAGE=$2

case ${STAGE} in
POST-DEINSTALL)
	ETCDIR=/etc/netatalk

	cat << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want to
remove the netatalk configuration file directory:

	${ETCDIR}
===========================================================================
EOF
	;;
esac
exit 0
