#!/bin/sh
#
# $NetBSD: configure,v 1.3 1998/08/29 18:05:57 kim Exp $
#
# Id: configure,v 1.1.1.1 1997/10/27 05:01:31 hubertf Exp
#
cd ${WRKSRC}
for i in do_unlinks.pl mirror.pl mm.pl pkgs_to_mmin.pl
do
    sed \
	-e s:!!PREFIX!!:$PREFIX:g \
	-e s:/usr/bin/perl:${PREFIX}/bin/perl: \
	<$i >$i.BAK
    mv -f $i.BAK $i
done
