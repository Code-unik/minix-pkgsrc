#!/bin/sh
wrapperlog="${TOOLS_WRAPPER_LOG-/var/obj/pkg/devel/p5-MooseX-Types-Common/work/.work.log}"
echo "[*] "/var/obj/pkg/devel/p5-MooseX-Types-Common/work/.tools/bin/perl" $@" >> $wrapperlog
echo "<.> echo >> /var/obj/pkg/devel/p5-MooseX-Types-Common/work/.warning/perl "Please add USE_TOOLS+=perl to the package Makefile.";  /bin/sh /opt/netbsd/pkgsrc/mk/scripts/fail echo 1>&2 "ERROR:" "To use this tool, add USE_TOOLS+=perl to the package Makefile."" >> $wrapperlog
echo >> /var/obj/pkg/devel/p5-MooseX-Types-Common/work/.warning/perl "Please add USE_TOOLS+=perl to the package Makefile.";  /bin/sh /opt/netbsd/pkgsrc/mk/scripts/fail echo 1>&2 "ERROR:" "To use this tool, add USE_TOOLS+=perl to the package Makefile."
