MAKE_FLAGS+=	mandir=${PREFIX}/${PKGMANDIR}

LDFLAGS+=	${COMPILER_RPATH_FLAG}${PREFIX}/lib
LIBS.SunOS+=	-liconv
CFLAGS.NetBSD+=	-D_NETBSD_SOURCE
