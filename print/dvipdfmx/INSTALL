TEXMF=@PREFIX@/share/texmf

case ${STAGE} in
POST-INSTALL)
	cd $TEXMF/dvipdfm/CMap
	# @PREFIX@/share/Adobe/Resource/CMap/*
	for file in ../../../Adobe/Resource/CMap/*; do
		${LN} -s $file `${BASENAME} $file`
	done
	@PREFIX@/bin/mktexlsr
	;;
esac
