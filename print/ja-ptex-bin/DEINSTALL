#!/bin/sh
#
# $NetBSD$

TEXMF=@PREFIX@/share/texmf
PSTRICKS=$TEXMF/dvips/pstricks

case $STAGE in
PRE-DEINSTALL)
	;;

DEINSTALL)
	;;

POST-DEINSTALL)
	$MV $TEXMF/web2c/texmf.cnf.orig $TEXMF/web2c/texmf.cnf
	$MV $PSTRICKS/pst-text.pro.orig $PSTRICKS/pst-text.pro
	@PREFIX@/bin/mktexlsr
	;;

*)
	$ECHO "Unexpected argument: $STAGE"
	exit 1
	;;

esac
