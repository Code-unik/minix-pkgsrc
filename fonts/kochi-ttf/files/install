# $NetBSD$

PREFIX=@PREFIX@
X11PREFIX=@X11PREFIX@
X11FONTSPREFIX=${PREFIX}/lib/X11/fonts
X11FONTSSUBDIR=@X11FONTSSUBDIR@
X11FONTSDIR=${X11FONTSPREFIX}/${X11FONTSSUBDIR}

case ${STAGE} in
PRE-INSTALL)
	;;
POST-INSTALL)
	${X11PREFIX}/bin/mkfontscale ${X11FONTSDIR}
	;;
*)
	${ECHO} "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
