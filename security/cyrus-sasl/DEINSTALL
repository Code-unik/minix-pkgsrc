#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.1 2001/11/01 01:16:36 zuntum Exp $

SASLDB=@CONFDIR@/sasldb.db
PWCHECKDIR=@PWCHECKDIR@

case ${STAGE} in
POST-DEINSTALL)
	${RM} -rf ${PWCHECKDIR}
	if [ -e ${SASLDB} ]
	then
		${CAT} << EOF
===========================================================================
You may want to remove the SASL password data file:

	${SASLDB}
===========================================================================
EOF
	fi
	;;
esac
