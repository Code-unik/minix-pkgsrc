#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.2 2002/11/14 22:21:13 seb Exp $

SASLDB=@PKG_SYSCONFDIR@/sasldb.db

case ${STAGE} in
POST-DEINSTALL)
	if [ -e ${SASLDB} ]
	then
		${CAT} << EOF
===========================================================================
You may want to remove the SASL password data file:

	${SASLDB}
===========================================================================
EOF
	fi
	;;
esac
