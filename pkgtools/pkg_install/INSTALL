#!/bin/sh
#
# $NetBSD: INSTALL,v 1.1 2005/11/06 22:15:44 jlam Exp $

PKGNAME="$1"
STAGE="$2"

PKG_DBDIR="@PKG_DBDIR@"
PKG_TOOLS_BIN="@PKG_TOOLS_BIN@"
MKDIR="@MKDIR@"

case ${STAGE} in
PRE-INSTALL)
	[ -d ${PKG_DBDIR} ] || ${MKDIR} ${PKG_DBDIR}
	;;

POST-INSTALL)
	[ -f ${PKG_DBDIR}/pkgdb.byfile.db ] || ${PKG_TOOLS_BIN}/pkg_admin rebuild
	;;
esac
