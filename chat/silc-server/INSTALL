# $NetBSD: INSTALL,v 1.2 2001/12/17 00:43:10 hubertf Exp $

case "${STAGE}" in
POST-INSTALL)
	if [ ! -f @PKG_SYSCONFDIR@/silcd.prv ]; then
		${ECHO} "==> Server private key is missing."
		@PREFIX@/sbin/silcd -C @PKG_SYSCONFDIR@
		${ECHO} ===========================================================================
	fi
	;;
esac
