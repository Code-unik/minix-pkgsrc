# $NetBSD: DEINSTALL,v 1.1 2004/07/21 17:45:13 jlam Exp $

case ${STAGE} in
POST-DEINSTALL)
	if [ -d @MYSQL_DATADIR@ ]; then
		${CAT} << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, and you don't
wish to preserve your existing databases, then you may remove the
following directory:

	@MYSQL_DATADIR@
===========================================================================
EOF
	fi
esac
