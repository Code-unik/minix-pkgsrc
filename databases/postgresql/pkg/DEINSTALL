#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.3 2000/12/07 16:56:41 jlam Exp $
#

PKGNAME=$1
STAGE=$2

USER="@PGUSER@"
GROUP="@PGGROUP@"

CAT="@CAT@"

PGHOME=${PKG_PREFIX}/${USER}

case ${STAGE} in
DEINSTALL)
	;;

POST-DEINSTALL)
	${CAT} << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want
to remove:

  * the \`${USER}' user

  * the \`${GROUP}' group

  * the following directories:

	${PGHOME}
===========================================================================
EOF
	;;

*)
	echo "Unexpected argument: $2"
	exit 1
	;;
esac
exit 0
