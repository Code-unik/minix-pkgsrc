#!/bin/sh
#
# $NetBSD: INSTALL,v 1.1 2000/09/10 12:02:48 wiz Exp $
#

PKGNAME=$1
STAGE=$2

MKDIR="@MKDIR@"

RPM=${PKG_PREFIX}/bin/rpm
RPMDIR=/var/pkg/lib/rpm

case ${STAGE} in
PRE-INSTALL)
	;;

POST-INSTALL)
	${MKDIR} ${RPMDIR}
	if ! ${RPM} -qa 2>/dev/null
	then
		echo "${PKGNAME}: initializing the RPM database..."
		${RPM} --initdb
	fi
	;;

*)
	echo "Unexpected argument ${STAGE}"
	exit 1
	;;
esac
exit 0
