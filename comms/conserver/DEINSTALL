#!/bin/sh
#
# $NetBSD$

PKGNAME=$1
STAGE=$2

CAT="@CAT@"

case ${STAGE} in
DEINSTALL)
	;;

POST-DEINSTALL)
	${CAT} << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want
to remove the following directories:

	/var/console
===========================================================================
EOF
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0
